.support-modal
  width 452px
  margin -250px 0 0 -226px
  background none
  border-radius 6px
  .modal-dialog
    .modal-content
      background rgba(0,0,0,0.75)
      border 1px solid rgba(255,255,255,0.2) !important
      text-align center
      box-shadow none
      border-radius 6px
    .modal-header
      position relative
      background none
      padding 15px
      border 0
      h2
        color #fff
        margin 0
        padding 0 0 15px
        font-size 18px
        font-weight 300
      .cancel
        position absolute
        top 11px
        right 20px
        font-size 24px
        color #999
        &:hover
          color #ccc
      &:after
        position absolute
        display block
        content ""
        width 100%
        height 1px
        left 0
        background linear-gradient(to right,rgba(0,0,0,0) 0%,rgba(255,255,255,0.25) 50%,rgba(0,0,0,0) 100%)
    .modal-epicenter
      padding 20px 15px
      .form-control
        width 320px
        color #fff
        background rgba(0,0,0,0.62)
        border 1px solid rgba(255,255,255,0.2)
        &:hover
          border 1px solid rgba(255,255,255,0.6)
        &:focus
          border-color #fed044
          box-shadow 0 0 8px rgba(254,208,68,0.6)
    .modal-footer
      position relative
      padding 15px
      .btn-primary
        color #000
        background #fec600
        border-color #fec600
        font-weight bold
      &:before
        position absolute
        display block
        content ""
        width 100%
        height 1px
        top 0
        left 0
        background linear-gradient(to right,rgba(0,0,0,0) 0%,rgba(255,255,255,0.25) 50%,rgba(0,0,0,0) 100%)

.modal-backdrop.in
  opacity 0.5